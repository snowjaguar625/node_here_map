extends ../../layout

block content
    title= title
    #content-padder 
    #content-real
        .ctrl-panel
            span#toggle-ctrl-panel.glyphicon.glyphicon-menu-left
            | &#x9;
            p#mapReleaseTxt
                | After route calculation, additional info is retrieved from PDE Web Service and displayed.
            | &#x9;
            table(border='0')
                tbody
                    tr
                        td Start
                        td
                            input#start.form-control(type='text', size='50', value='Windgasse 15 Haslach Austria')
                    | &#x9;&#x9;
                    tr
                        td via
                        td
                            input#via.form-control(type='text', size='50', value='Bad Leonfelden Austria')
                    | &#x9;&#x9;
                    tr
                        td Destination
                        td
                            input#dest.form-control(type='text', size='50', value='Bahnhofplatz 3 Linz Austria')
            | &#x9;
            input#routeButton.btn.btn-default.btn-sm(type='submit', value='Calculate Route')
            | &#x9;
            #feedbackTxt(style='left:0; top:0; z-index: 0;')
            | &#x9;
            #resultArea(style='display:none')
            | &#x9;
            div HLP Service releases which are used in this demo:
            | &#x9;
            #releaseInfoTxt(style='left:0; top:0; z-index: 0;')
        #mapContainer
    script(src='/javascripts/examples/v31/traffic-icons.js')
    script(src='/javascripts/examples/v31/release-requests.js')
    script(src='/javascripts/examples/v31/pde-manager-tiles.js')
    script(src='/javascripts/examples/v31/pde_traffic_signs.js')
    