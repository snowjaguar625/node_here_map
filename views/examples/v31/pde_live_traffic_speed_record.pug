extends ../../layout

block content
    title= title
    script(src='/javascripts/examples/v31/center-utils.js')
    script(src='/javascripts/examples/v31/pde-layer-provider.js')
    #content-padder 
    #content-real
        style.
            li {
            list-style-type: square;
            font-size: medium;
            }
            a.speed-record {
            color: #00ACDC;
            text-decoration: underline;
            }
            .speed-record {
            font-size: small;
            padding: 0.1em;
            }
            table.speed-record td {
            padding: 0.4em;
            border: 1px solid white
            }
        .ctrl-panel
            span#toggle-ctrl-panel.glyphicon.glyphicon-menu-left
            p Zoom in to see more traffic from higher functional classes.
            p Links with traffic information show an info bubble with details when clicked.
            input#endpoint(type='hidden' value='https://pde.api.here.com' autocomplete='off')
            h4 Move slider to change record time
            p
                | Rightmost is now, leftmost is 7 days ago. Resolution is 15 minutes.
            p
                input#timestamp-slider(autocomplete='off' type='range' min='-604800' max='0' step='900' value='0' onchange='trafficTimeMachine.invokeLaterGoBackBy(Number(this.value) * 1000, updateActualTimeLabel);' oninput='updateRequestTimeLabel(Number(this.value));')
            div
                label(for='request-ts-label') Requested traffic date
                p#request-ts-label
            div
                label(for='actual-ts-label') Actual traffic date
                p#actual-ts-label
        #mapContainer
    script(src='/javascripts/examples/v31/pde_live_traffic_speed_record.js')