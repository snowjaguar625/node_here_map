extends ../../layout

block content
    title= title
    script(src='/javascripts/examples/v31/rectangle_selection.js')
    #content-padder 
    #content-real
        .ctrl-panel
            span#toggle-ctrl-panel.glyphicon.glyphicon-menu-left
            p#mapReleaseTxt
                | After selection, additional info is retrieved from PDE Web Service and displayed.
            .form-horizontal
                .form-group
                    .col-sm-9
                        input#loadSpeedLimits.btn.btn-default.btn-sm(type='button' value='Load Information for current View' onclick='loadRRForView();')
                #feedbackTxt(style='left:0; top:0; z-index: 0;')
                div HLP Service releases which are used in this demo:
                #releaseInfoTxt(style='left:0; top:0; z-index: 0;' value='Used Service Releases:/n')
        #mapContainer
        #pageblock
        #spinner
        style(type='text/css').
            .PO {
            position: absolute;
            display: none;
            background: white;
            padding: 10px 10px 0px;
            margin-left: -10px;
            margin-top: 2em;
            border-radius: 15px;
            left: 50%; top: 50%;
            border: solid #a1a1a1 1px;
            padding: 10px;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            text-align: justify;
            font-size: 12px;
            color: #1F2C35;
            z-index: 1;
            }
            #page_block
            {
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            background: white;
            opacity:0.6;
            position: absolute;
            display: none;
            }
    script(src='/javascripts/examples/v31/release-requests.js')
    script(src='/javascripts/examples/v31/pde-manager-tiles.js')
    script(src='/javascripts/examples/v31/pde_4_wheel_in_view_dom_rendering_3_1.js')
