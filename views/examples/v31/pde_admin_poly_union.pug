extends ../../layout

block content
    title= title
    script(src='/javascripts/examples/v31/PDEGeomUtils.js')
    script(src='/javascripts/examples/v31/wellknown.js')
    script(src='/javascripts/examples/v31/jsts.min.js')
    #content-padder 
    #content-real
        .ctrl-panel
            span#toggle-ctrl-panel.glyphicon.glyphicon-menu-left
            p#infoTxt
                | This demo shows the Postal Code Boundaries available from Geocoder based on the PDE Postal Codes. They will be shown in lower zoomlevels only.
            .form-horizontal
                input#union.btn.btn-default.btn-sm(type='button' value='Union Selected Polygons' onclick='union();')
            div HLP Service releases which are used in this demo:
            #releaseInfoTxt(style='left:0; top:0; z-index: 0;')
        #mapContainer
        #pageblock
        #spinner
    script(src='/javascripts/examples/v31/release-requests.js')
    script(src='/javascripts/examples/v31/pde-manager-tiles.js')
    script(src='/javascripts/examples/v31/pde_admin_poly_union.js')