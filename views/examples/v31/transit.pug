extends ../../layout

block content
    title= title
    #content-padder 
    #content-real
        .ctrl-panel
            span#toggle-ctrl-panel.glyphicon.glyphicon-menu-left
            .form-horizontal
                .form-group
                    label.control-label.col-sm-3(for='country') Region:
                    .col-sm-9
                        select#country.form-control.input-wide(onchange='switchRegion(country.options[country.options.selectedIndex].value)')
                            option(value='EU' selected='selected') Europe
                            option(value='NA') North America
                            option(value='BR') Brazil
                            option(value='MEA') MEA
                .form-group
                    label.control-label.col-sm-3(for='start') Start:
                    .col-sm-9
                        input#input-from.form-control.input-wide(type='text')
                .form-group
                    label.control-label.col-sm-3(for='destination') Destination:
                    .col-sm-9
                        input#input-to.form-control.input-wide(type='text')
            .form-group
                label.control-label.col-sm-4(for='customAppId') App id:
                .col-sm-8
                    input#customAppId.form-control.input-wide(type='text' value='' placeholder='Leave empty for demo account' autocomplete='off')
            .form-group
                label.control-label.col-sm-4(for='customAppCode') App code:
                .col-sm-8
                    input#customAppCode.form-control.input-wide(type='text' value='' placeholder='Leave empty for demo account' autocomplete='off')
            hr
            hr.separator
            h5 Public transit line type
            .form-horizontal
                .form-group
                    .col-sm-6
                        .checkbox
                            label
                                input#highSpeedTrains(type='checkbox' checked='')
                                | High-speed trains
                    .col-sm-6
                        .checkbox
                            label
                                input#Intercity_EuroCity_Trains(type='checkbox' checked='')
                                | Intercity/EuroCity Trains
                    .col-sm-6
                        .checkbox
                            label
                                input#Inter_regional_fast_trains(type='checkbox' checked='')
                                | Inter regional and fast trains
                    .col-sm-6
                        .checkbox
                            label
                                input#Regional_other_trains(type='checkbox' checked='')
                                | Regional and other trains
                    .col-sm-6
                        .checkbox
                            label
                                input#City_trains(type='checkbox' checked='')
                                | City trains
                    .col-sm-6
                        .checkbox
                            label
                                input#Buses(type='checkbox' checked='')
                                | Buses
                    .col-sm-6
                        .checkbox
                            label
                                input#Boats_Ferries(type='checkbox' checked='')
                                | Boats/Ferries
                    .col-sm-6
                        .checkbox
                            label
                                input#Metros_Subways(type='checkbox' checked='')
                                | Metros/Subways
                    .col-sm-6
                        .checkbox
                            label
                                input#Trams(type='checkbox' checked='')
                                | Trams
                    .col-sm-6
                        .checkbox
                            label
                                input#Ordered_services_Taxis(type='checkbox' checked='')
                                | Ordered services/Taxis
                    .col-sm-6
                        .checkbox
                            label
                                input#Inclined_Funiculars(type='checkbox' checked='')
                                | Inclined/Funiculars
                    .col-sm-6
                        .checkbox
                            label
                                input#Aerials_Cable_Cars(type='checkbox' checked='')
                                | Aerials/Cable Cars
                    .col-sm-6
                        .checkbox
                            label
                                input#Rapid_Buses(type='checkbox' checked='')
                                | Rapid Buses
                    .col-sm-6
                        .checkbox
                            label
                                input#Monorails(type='checkbox' checked='')
                                | Monorails
                    .col-sm-6
                        .checkbox
                            label
                                input#Airplanes(type='checkbox' checked='')
                                | Airplanes
                    .col-sm-6
                        .checkbox
                            label
                                input#Walk(type='checkbox' checked='')
                                | Walk
            .form-group
                input#startRouting.btn.btn-default.btn-sm(type='button' value='route' onclick='removeAndStartRouting()')
            #simulationContainer.simulationContainer(style='display:none')
                hr.separator
                h5 Please choose a connection:
                .checkbox
                    label
                        input#connection0(type='checkbox' onchange='connectionOnOff0();' disabled='')
                        | Connection 0
                .checkbox
                    label
                        input#connection1(type='checkbox' onchange='connectionOnOff1();' disabled='')
                        | Connection 1
                .checkbox
                    label
                        input#connection2(type='checkbox' onchange='connectionOnOff2();' disabled='')
                        | Connection 2
                .checkbox
                    label
                        input#connection3(type='checkbox' onchange='connectionOnOff3();' disabled='')
                        | Connection 3
                hr.separator
                h5 Operators:
                p#connectionOperators
                hr.separator
                h5 HLP Service releases which are used in this demo:
                #releaseInfoTxt(value='Used Service Releases:/n')
        #mapContainer
    script(src='/javascripts/examples/v31/release-requests.js')
    script(src='/javascripts/examples/v31/transit.js')